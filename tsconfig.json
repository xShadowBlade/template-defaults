{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES5",
		"module": "NodeNext",
		"strict": true,
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",  // Adjust this based on your project structure
		"outDir": "./dist",  // Adjust this based on your project structure
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
	  	"node_modules/"
	]
}